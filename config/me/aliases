# Aliases

alias z="source $HOME/.zshrc"

alias s="sudo"
alias v="vim"
alias g="git"
alias d="docker"

alias .="cd ~"
alias ..="cd .."
alias ...="cd ../.."
alias -- '-=cd -'

alias ls="ls --color"
alias l="ls -lha"
alias ll="ls -lh"

alias bat="batcat"

alias play="ansible-playbook"

alias venv="python -m venv ${PWD}/venv"
alias activate="source ${PWD}/venv/bin/activate"

# Functions

archive-br() {
  git checkout master
  git tag archive/$1 $1
  git branch -d $1
}
